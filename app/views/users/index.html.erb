<%= render "shared/header" %>

<h1>Users</h1>
<% if @users.empty? %>
  <p>There is no one here right now.<p>
<% else %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%=
          link_to(
            "#{user.username} #{user.id == current_user.id ? " (You)" : ""}",
            user_path(user.id)
          )
        %>
      </li>
    <% end %>
  </ul>
<% end %>
