<%= render "shared/header" %>

<h1>
  User:
  <%= @user.username %>
  <%= @is_same_user ? " (You)" : "" %>
</h1>

<% if @can_follow %>
  <%=
    render(
      partial: "shared/follow_request_form",
      locals: {
        requestee_id: @user.id, requester_id: current_user.id
      }
    )
  %>
<% end %>

<% if @can_unfollow %>
  <%=
    render(
      partial: "shared/unfollow_form",
      locals: {
        random_id: 999,
        followee_id: @user.id,
        follower_id: current_user.id
      }
    )
  %>
<% end %>

<p>User profile body</p>
