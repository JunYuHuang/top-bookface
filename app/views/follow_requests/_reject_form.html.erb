<%# Query parameters `:user_id` and `:id` do not matter because only the hidden input values are used to delete a follow request. %>
<%=
  form_with(
    url: user_follow_request_path(random_id, random_id),
    method: :delete
  ) do |form|
%>
  <%= form.hidden_field :requestee_id, value: requestee_id %>
  <%= form.hidden_field :requester_id, value: requester_id %>
  <%= form.submit "Reject" %>
<% end %>
