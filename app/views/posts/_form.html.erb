<%= form_with model: post do |form| %>
  <div>
    <div>
      <%= form.label :body, "Body:" %>
    </div>
    <%= form.text_area :body %>
    <% post.errors.full_messages_for(:body).each do |msg| %>
      <div><%= msg %></div>
    <% end %>
  </div>
  <br>
  <div>
    <%= form.submit "#{submit_name}" %>
  </div>
<% end %>
