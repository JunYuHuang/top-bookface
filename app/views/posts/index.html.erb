<%= render "shared/header" %>

<h1>
  Posts
  <%= @is_followed_posts_only ? " (Followed Only)" : " (All)" %>
</h1>
<p><%= link_to "New Post", new_post_path %><p>

<% if @posts.empty? %>
  <p>None.<p>
<% else %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to "#{post.body}", post_path(post.id) %>
      </li>
    <% end %>
  </ul>
<% end %>
